<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 https://maven.apache.org/xsd/maven-4.0.0.xsd">
  <modelVersion>4.0.0</modelVersion>
  <groupId>de.iip-ecosphere.platform</groupId>
  <artifactId>MvnCentral</artifactId>
  <version>0.2.0-SNAPSHOT</version>
  
  <repositories>       
    <repository>
      <id>SSE</id>
      <name>SSE</name>
      <url>https://projects.sse.uni-hildesheim.de/qm/maven/</url>
      <layout>default</layout>
    </repository>
  </repositories>
  
  <distributionManagement>
    <repository>
      <id>ossrh-iip</id>
      <url>https://oss.sonatype.org/service/local/staging/deploy/maven2/</url>
    </repository>
  </distributionManagement>
  
  <!-- just name all top-level artifacts and alternatives -->
  <dependencies>
    <dependency>
        <artifactId>platformDependencies</artifactId>
        <groupId>de.iip-ecosphere.platform</groupId>
        <version>${project.version}</version>
        <type>pom</type>
    </dependency>
    <dependency>
        <artifactId>connectors.opcuav1</artifactId>
        <groupId>de.iip-ecosphere.platform</groupId>
        <version>${project.version}</version>
    </dependency>
    <dependency>
        <artifactId>connectors.mqttv5</artifactId>
        <groupId>de.iip-ecosphere.platform</groupId>
        <version>${project.version}</version>
    </dependency>
    <dependency>
        <artifactId>connectors.mqttv3</artifactId>
        <groupId>de.iip-ecosphere.platform</groupId>
        <version>${project.version}</version>
    </dependency>
    <dependency>
        <artifactId>connectors.aas</artifactId>
        <groupId>de.iip-ecosphere.platform</groupId>
        <version>${project.version}</version>
    </dependency>    

    <dependency>
        <artifactId>transport.amqp</artifactId>
        <groupId>de.iip-ecosphere.platform</groupId>
        <version>${project.version}</version>
    </dependency>    
    <dependency>
        <artifactId>transport.mqttv3</artifactId>
        <groupId>de.iip-ecosphere.platform</groupId>
        <version>${project.version}</version>
    </dependency>    
    <dependency>
        <artifactId>transport.mqttv5</artifactId>
        <groupId>de.iip-ecosphere.platform</groupId>
        <version>${project.version}</version>
    </dependency>
        
    <dependency>
        <artifactId>transport.spring.amqp</artifactId>
        <groupId>de.iip-ecosphere.platform</groupId>
        <version>${project.version}</version>
    </dependency>    
    <dependency>
        <artifactId>transport.spring.mqttv3</artifactId>
        <groupId>de.iip-ecosphere.platform</groupId>
        <version>${project.version}</version>
    </dependency>    
    <dependency>
        <artifactId>transport.spring.mqttv5</artifactId>
        <groupId>de.iip-ecosphere.platform</groupId>
        <version>${project.version}</version>
    </dependency>
    <dependency>
        <artifactId>transport.spring.hivemqv3</artifactId>
        <groupId>de.iip-ecosphere.platform</groupId>
        <version>${project.version}</version>
    </dependency>
    <dependency>
        <artifactId>transport.spring.hivemqv5</artifactId>
        <groupId>de.iip-ecosphere.platform</groupId>
        <version>${project.version}</version>
    </dependency>

  </dependencies>
  
  <build>
    <plugins>
      <plugin>
        <groupId>org.apache.maven.plugins</groupId>
        <artifactId>maven-dependency-plugin</artifactId>
        <version>3.1.2</version>
        <executions>
          <execution>
            <id>copy-dependencies</id>
            <phase>package</phase>
            <goals>
              <goal>copy-dependencies</goal>
            </goals>
            <configuration>
              <outputDirectory>${project.build.directory}/jars</outputDirectory>
              <overWriteReleases>false</overWriteReleases>
              <overWriteSnapshots>false</overWriteSnapshots>
              <overWriteIfNewer>true</overWriteIfNewer>
              <includeGroupIds>de.iip-ecosphere.platform</includeGroupIds>
              <copyPom>true</copyPom>
            </configuration>
          </execution>
          <execution>
            <id>copy-javadocs</id>
            <phase>package</phase>
            <goals>
              <goal>copy-dependencies</goal>
            </goals>
            <configuration>
              <outputDirectory>${project.build.directory}/jars</outputDirectory>
              <overWriteReleases>false</overWriteReleases>
              <overWriteSnapshots>false</overWriteSnapshots>
              <overWriteIfNewer>true</overWriteIfNewer>
              <includeGroupIds>de.iip-ecosphere.platform</includeGroupIds>
              <classifier>javadoc</classifier>
            </configuration>
          </execution>
          <execution>
            <id>copy-tests</id>
            <phase>package</phase>
            <goals>
              <goal>copy-dependencies</goal>
            </goals>
            <configuration>
              <outputDirectory>${project.build.directory}/jars</outputDirectory>
              <overWriteReleases>false</overWriteReleases>
              <overWriteSnapshots>false</overWriteSnapshots>
              <overWriteIfNewer>true</overWriteIfNewer>
              <includeGroupIds>de.iip-ecosphere.platform</includeGroupIds>
              <classifier>tests</classifier>
            </configuration>
          </execution>
          <execution>
            <id>copy-sources</id>
            <phase>package</phase>
            <goals>
              <goal>copy-dependencies</goal>
            </goals>
            <configuration>
              <outputDirectory>${project.build.directory}/jars</outputDirectory>
              <overWriteReleases>false</overWriteReleases>
              <overWriteSnapshots>false</overWriteSnapshots>
              <overWriteIfNewer>true</overWriteIfNewer>
              <includeGroupIds>de.iip-ecosphere.platform</includeGroupIds>
              <classifier>sources</classifier>
            </configuration>
          </execution>
          <execution>
            <id>copy-test-sources</id>
            <phase>package</phase>
            <goals>
              <goal>copy-dependencies</goal>
            </goals>
            <configuration>
              <outputDirectory>${project.build.directory}/jars</outputDirectory>
              <overWriteReleases>false</overWriteReleases>
              <overWriteSnapshots>false</overWriteSnapshots>
              <overWriteIfNewer>true</overWriteIfNewer>
              <includeGroupIds>de.iip-ecosphere.platform</includeGroupIds>
              <classifier>test-sources</classifier>
            </configuration>
          </execution>
          <execution>
            <id>copy-test-javadoc</id>
            <phase>package</phase>
            <goals>
              <goal>copy-dependencies</goal>
            </goals>
            <configuration>
              <outputDirectory>${project.build.directory}/jars</outputDirectory>
              <overWriteReleases>false</overWriteReleases>
              <overWriteSnapshots>false</overWriteSnapshots>
              <overWriteIfNewer>true</overWriteIfNewer>
              <includeGroupIds>de.iip-ecosphere.platform</includeGroupIds>
              <classifier>test-javadoc</classifier>
            </configuration>
          </execution>
        </executions>
      </plugin>
      
     <plugin>
       <groupId>org.apache.maven.plugins</groupId>
       <artifactId>maven-gpg-plugin</artifactId>
       <version>1.5</version>
       <executions>
         <execution>
           <id>sign-artifacts</id>
           <phase>verify</phase>
           <goals>
             <goal>sign</goal>
           </goals>
         </execution>
       </executions>
     </plugin>

