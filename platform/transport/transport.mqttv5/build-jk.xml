<?xml version="1.0" encoding="UTF-8"?>
<project name="transport layer" default="maven" basedir=".">
	<!-- import of the global SSE Jenkins properties -->
	<property file="${user.home}/global-build.properties"/>
	<property file="${user.home}/qualimaster-build.properties"/>
	<include file="${user.home}/macros.xml"/>
	
    <!-- deploy to SSE Mvn repo -->
	<target name="maven"> 
	    <maven pomFile="pom.xml" goal="package"/>
	    <path id="jarFile.id">
          <fileset dir="target">
            <include name="transport.mqtt*.*.*-SNAPSHOT.jar"/>
          </fileset>
        </path>
        <local name="temp"/>
        <property name="temp" refid="jarFile.id"/>
        <local name="jarFile"/>
        <basename property="jarFile" file="${temp}"/>
	    <mvnDeploy folderName="IIP-transport-mqttv5" pomFile="pom.xml" jarFolder="target/" jarFile="${jarFile}" />
	</target>
</project>
